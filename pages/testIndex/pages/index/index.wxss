/* pages/testIndex/pages/index/index.wxss */
.flex{
  display: flex;
  justify-content: space-between
}
.header>text{
  border-left:3px solid #AABFBB;
  padding-left:10px;
  font-weight: bold;
  margin-bottom:10px;
  margin-top:10px;
}
.header>navigator{
font-size: 14px;
color:#9AD0A6;
}
.content{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.contentItem{
  width:50%;
  height:300rpx;
  padding-left:2%;
  padding-bottom:2%;
  box-sizing:border-box;
  position: relative;
}
.contentItem>text{
  width:97%;
  position: absolute;
   bottom:0px;
  left:0px; 
  background: #000;
  opacity: 0.5;
  color: #fff;
  box-sizing: border-box;
  margin-left: 3%;
  margin-bottom: 3%;
  font-size:15px;
}
.contentItem2{
  width:100%;
  height:300px;
  position: relative;
}
.contentItem2>image{
  width:100%;
  height:70%;
}
.contentItem2>image+image{
  width:80rpx;
  height:80rpx;
  position: absolute;
  right: 10%;
  bottom: 25%;
  border-radius: 50%;
}
.contentItem2>view>text{
  font-weight:bold;
  font-size: 15px;
  margin-left:15rpx;
}
.contentItem2>view>view{
    margin-left:20rpx;
    font-size: 15px;
    color:gray;
    margin-top:10px;
}
